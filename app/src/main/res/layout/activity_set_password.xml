<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launch_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    android:backgroundTint="@color/BackgroundColor"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp"
    android:textAlignment="center">

    <LinearLayout
        android:id="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/arrow_previous" />

            <TextView
                android:id="@+id/back_password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back_password_btn"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center"
            tools:ignore="RtlCompat,UselessParent">

            <TextView
                android:id="@+id/workout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="@string/set_password_title"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/Workout_Log"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:background="@color/GreenSecondary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Password_Title"
                    android:layout_width="350dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="@string/password"
                    android:textAlignment="viewStart"
                    android:textColor="#3C3C3C"
                    android:textSize="18sp"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/Password_input"
                    android:layout_width="350dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:autofillHints=""
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:hint="@string/password_entered"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/arms_txt"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="@string/confirm_password_title"
                    android:textAlignment="viewStart"
                    android:textColor="#3C3C3C"
                    android:textSize="18sp"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/password_input2"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:autofillHints=""
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:hint="@string/password_entered"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Adding_workout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Btn_Workout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <Button
                    android:id="@+id/Login_btn"
                    android:layout_width="177dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/GreenSecondary"
                    android:gravity="center"
                    android:text="@string/reset_btn" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>